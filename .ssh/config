# Read more about SSH config files:
# https://linux.die.net/man/5/ssh_config
# https://linuxize.com/post/using-the-ssh-config-file/

# Personal
Host ac alpha-centauri
  HostName 10.0.0.1
  User james
  IdentityFile ~/.ssh/id_ed25519

Host local-ac
  HostName 192.168.0.2
  User james
  IdentityFile ~/.ssh/id_ed25519

Host remarkable 
  HostName 10.11.99.1
  User root
  IdentityFile ~/.ssh/remarkable_rsa
  ForwardX11 no
  ForwardAgent no
  HostKeyAlgorithms=ssh-rsa

Host polaris polaris.frost.cx
  HostName 192.168.0.3
  User james
  IdentityFile ~/.ssh/id_ed25519

Host vega vega.frost.cx
  HostName vega.frost.cx
  User root
  IdentityFile ~/.ssh/id_ed25519

# Met Office
Host vdi
  HostName vld753.cmpd1.metoffice.gov.uk
  User jfrost

Host cazld*
  HostName %h.spice.sc.metoffice.gov.uk
  User james.frost
